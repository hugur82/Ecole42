NAME = libftprintf.a

CC = gcc

FLAGS = -Wall -Werror -Wextra

OBJ = $(SRC:.c=.o)

AR = ar rc

$(NAME): $(OBJ)
	$(AR) $@ $^

%.o : %.c
	$(CC) $(FLAGS) -c $<